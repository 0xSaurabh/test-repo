<!DOCTYPE html>
<html>
  <%- include('./components/header'); -%>
  <link rel='stylesheet' href='/stylesheets/form.css' />
  <body>
    <div id="root">
      <%- include('./components/nav'); -%>
      <div class='position-absolute fixed-top d-flex flex-column min-vh-100 justify-content-center align-items-center' style="z-index: 0;">
        <form action="/register" method="POST" id='form' class="d-flex flex-column shadow p-3 mb-5 bg-white rounded">
          <p class="text-center font-weight-bold" style="font-size: 18px;">Let's get the party started 🥳</p>
          <!-- name -->
          <div class="form-group">
            <label for="name">😇 Your name: </label>
            <input type="text" class="form-control form-control-sm" name="name">
          </div>
          <!-- email -->
          <div class="form-group">
            <label for="email">😇 Your email: </label>
            <input type="email" class="form-control form-control-sm" name="email" aria-describedby="emailHelp">
          </div>
          <!-- password -->
          <div class="form-group">
            <label for="password">😇 Enter a password: </label>
            <input type="password" class="form-control form-control-sm" name="password">
          </div>
          <!-- confirm password -->
          <div class="form-group">
            <label for="cpassword">😇 Comfirm password: </label>
            <input type="password" class="form-control form-control-sm" name="cpassword">
          </div>
          <!-- bio -->
          <div class="form-group">
            <label for="bio">😇 Tell us about yourself:</label>
            <textarea class="form-control form-control-sm" name="bio" rows="2"></textarea>
          </div>
          <button type="submit" class="btn btn-outline-success w-25 align-self-center">🎉 Register!</button>
        </form>
      </div>
    </div>
  </body>
  <%- include('./components/scripts'); -%>
</html>