<!DOCTYPE html>
<html>
  <%- include('./components/header'); -%>
  <link rel='stylesheet' href='/stylesheets/form.css' />
  <link rel='stylesheet' href='/stylesheets/feed.css' />
  <body>
    <div id='root'>
      <%- include('./components/nav'); -%>
      <div class='position-absolute fixed-top d-flex flex-column min-vh-100 justify-content-center align-items-center' style="z-index: 0;">
        <div id='posts' class="carousel slide w-100" data-interval="false" data-ride="false" data-wrap="false">
          <div class="carousel-inner py-5">
            <!-- item -->
            <div class="carousel-item active">
              <div class="d-flex w-100 align-items-center justify-content-center" style="height: 70vh;">
                <div id='form' class="d-flex flex-column justify-content-center align-items-center shadow p-2 mb5 bg-white rounded">
                  <% if(posts[0].url.length>1) { %>
                  <div class="img-container">
                    <img src='<%- posts[0].url %>' class="img mt-2"/>
                  </div>
                  <% } %>
                  <p class="align-center mt-4 mb-2"><%- posts[0].text %></p>
                  <div class="d-flex flex-column w-100 ml-4 my-2">
                    <p class="m-0">shared by <%- posts[0].name %></p>
                    <p class="m-0">in <%- posts[0].type %></p>
                  </div>
                </div>
              </div>
              <div class="d-flex mb-4 justify-content-center">
                <form action="/approve" method="POST">
                <button class="btn btn-outline-success mr-3" type="submit" onclick="(e) => {e.preventDefault();$('.carousel').carousel('next')}">✅ approve</button>
                </form>
                <form action="/disapprove" method="POST">
                  <button class="btn btn-outline-danger" type="submit" onclick="$('.carousel').carousel('next')">❌ Disapprove</button></a>
                </form>
              </div>
            </div>
            <div class="carousel-item">
              <div class="d-flex w-100 align-items-center justify-content-center" style="height: 70vh;">
                <div id='form' class="d-flex flex-column justify-content-center align-items-center shadow p-2 mb5 bg-white rounded">
                  <% if(posts[0].url.length>1) { %>
                  <div class="img-container">
                    <img src='<%- posts[0].url %>' class="img mt-2"/>
                  </div>
                  <% } %>
                  <p class="align-center mt-4 mb-2"><%- posts[0].text %></p>
                  <div class="d-flex flex-column w-100 ml-4 my-2">
                    <p class="m-0">shared by <%- posts[0].name %></p>
                    <p class="m-0">in <%- posts[0].type %></p>
                  </div>
                </div>
              </div>
              <div class="d-flex mb-4 justify-content-center">
                <form action="/approve" method="POST">
                  <button class="btn btn-outline-success mr-3" type="submit" onclick="$('.carousel').carousel('next')">✅ approve</button>
                </form>
                <form action="/disapprove" method="POST">
                  <button class="btn btn-outline-danger" type="submit" onclick="$('.carousel').carousel('next')">❌ Disapprove</button></a>
                </form>
              </div>
            </div>
          </div>
          <!-- inner carousel ends here-->
        </div>
        <!-- controls -->
      </div>
    </div>
  </body>
  <%- include('./components/scripts'); -%>
</html>


